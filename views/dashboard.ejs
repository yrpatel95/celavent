<div class="container">

    <div class="row text-right" style="display:flex; flex-wrap:wrap;">
        <div class="col-md-12 col-sm-12">
            <form action="/newEvent" method="get">
                <br>
                <button class="btn btn-light btn-block"><i class="far fa-calendar-plus"></i> Add New Event</button>
            </form>
            
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">

        
        <% clients.forEach(function(clients){ %>
        <div class="col-md-4 col-sm-12">
            <br>
            <div class="card">
                <div>
                    <img src="https://images.unsplash.com/photo-1541089404510-5c9a779841fc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" width="100%" height="180">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <h4 class="card-title"><%=clients.eventName%></h4>
                        </li>

                        <!-- <li class="list-group-item"><%=clients.venueName%></li>
                        <li class="list-group-item"><%=clients.venueCity%>,<%=clients.venueState%></li>
                        
                        <li class="list-group-item">Start: <%=clients.startDate%></li>
                        <% if(clients.eventLength == "multiDay"){ %>
                            <li class="list-group-item" id="endDate">End: <%=clients.endDate%></li>
                            <li class="list-group-item" id="eventLength">Multi-Day Event</li>
                        <% } else {%>
                            <li class="list-group-item" id="eventLength">Single Day Event</li>
                        <% }%>   
                        <% if(clients.photographyBudget != null){ %>
                            <li class="list-group-item" id="photographyBudget">Photography: $<%=clients.photographyBudget%></li>
                        <% } %>
                        <% if(clients.videographyBudget != null){ %>
                            <li class="list-group-item" id="videographyBudget">Videograhpy: $<%=clients.videographyBudget%></li>
                        <% } %>
                        <% if(clients.entertainmentBudget != null){ %>
                            <li class="list-group-item" id="entertainmentBudget">Entertainment: $<%=clients.entertainmentBudget%></li>
                        <% } %> -->

                        
                        <li class="list-group-item">
                            <a class="btn btn-light" href='updateEvent/<%=clients.id%>' role="button">Update Event</a>
                            <a class="btn btn-light" href='deleteEvent/<%=clients.id%>' role="button">Delete Event</a>
                        </li>
                        <li class="list-group-item"><a class="btn btn-light" role="button">See Vendor</a></li>
                    </ul>
                </div>
                <!-- 
                    <div class="card-body" style="text-align:center">
                        <a class="btn btn-light" href='updateEvent/<%=clients.id%>' role="button">Update Event</a>
                        <a class="btn btn-light" href='deleteEvent/<%=clients.id%>' role="button">Delete Event</a>
                        <a class="btn btn-light" href='updateEvent/<%=clients.id%>' role="button">See Vendors</a>
                    </div>
                 -->
            </div>
        </div>
        <% }); %>
    </div>
</div>



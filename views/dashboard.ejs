<div class="container">

    <div class="row text-right" style="display:flex; flex-wrap:wrap;">
        <div class="col-md-12 col-sm-12">
            <form action="/newEvent" method="get">
                <br>
                <button class="btn btn-primary btn-block"><i class="far fa-calendar-plus"></i> Add New Event</button>
            </form>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">


        <% clients.forEach(function(clients){ %>
        <div class="col-md-4 col-sm-12">
            <br>
            <div class="card" >
                <!--<svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" role="img"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>-->
                <div>
                    <!-- <img src="https://images.unsplash.com/photo-1541089404510-5c9a779841fc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" width="100%" height="180"> -->

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <h4 class="card-title"><%=clients.eventName%></h4>
                        </li>
                        <li class="list-group-item"><%=clients.venueName%></li>
                        <li class="list-group-item"><%=clients.venueCity%>,<%=clients.venueState%></li>
                        <li class="list-group-item"><%=clients.budget%></li>
                        <li class="list-group-item" id="eventLength"><%=clients.eventLength%></li>
                        <li class="list-group-item">Start: <%=clients.startDate%></li>
                        <% if(clients.eventLength == "multiDay"){ %>
                        <li class="list-group-item" id="endDate">End: <%=clients.endDate%></li>
                        <% } %>

                    </ul>
                </div>

                <div class="card-body" style="text-align:center">
                    <a class="btn btn-primary" href="#" role="button">See More Info</a>
                </div>
            </div>
        </div>
        <% }); %>


    </div>
</div>